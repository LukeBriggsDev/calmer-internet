{
  "manifest_version": 3,
  "name": "Calmer Internet",
  "version": "1.2.5",
  "browser_specific_settings": {
    "gecko": {
      "id": "calmerinternet@lukebriggs.dev"
    }
  },
  "action": {
    "default_icon": {
      "16": "icons/16.png",
      "24": "icons/24.png",
      "32": "icons/32.png"
    },
    "default_title": "Calmer Internet"
  },
  "icons": {
    "48": "icons/48.png",
    "96": "icons/96.png"
  },
  "content_scripts": [
  {
    "matches": [
      "*://*.youtube.com/*",
      "*://*.twitter.com/*", "*://twitter.com/*",
      "*://*.instagram.com/*"
    ],
    "js": ["calmer.js"]
  }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [{
      "id": "youtube",
      "enabled": true,
      "path": "rules/youtube.json"
    },
    {
      "id": "twitter",
      "enabled": true,
      "path": "rules/twitter.json"
    },
    {
      "id": "instagram",
      "enabled": true,
      "path": "rules/instagram.json"
    }]
  },
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.twitter.com/*", "*://twitter.com/*",
    "*://*.instagram.com/*"
  ],
  "description": "Provides a calmer internet experience. Removes comments and various recommendation elements from Twitter, YouTube, Instagram.",
  "options_ui": {
    "page": "options.html"
  }
}