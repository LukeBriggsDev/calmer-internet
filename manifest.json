{
    "manifest_version": 2,
    "name": "Calmer Internet",
    "version": "1.0.0",
    "icons": {
      "48": "icons/48.png",
      "96": "icons/96.png"
    },
    "declarative_net_request" : {
      "rule_resources" : [{
        "id": "ruleset_1",
        "enabled": true,
        "path": "request_rules.json"
      }]
    },
    "permissions": [
      "*://*.youtube.com/*",
      "*://*.twitter.com/*", "*://twitter.com/*",
      "*://*.instagram.com/*",
      "declarativeNetRequest",
      "declarativeNetRequestFeedback"
    ],
    "description": "Provides a calmer internet experience",
    "content_scripts": [
      {
        "matches": [
          "*://*.youtube.com/*", 
          "*://*.twitter.com/*", "*://twitter.com/*", 
          "*://*.instagram.com/*"
        ],
        "js": ["calmer.js"]
      }
    ]
  }